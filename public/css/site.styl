// Expandable footer button 
#collapse-footer-button
  top -70px
  cursor pointer
  position relative
  transition all cubic-bezier(0.250, 0.460, 0.450, 0.940) 600ms
  width 100%
  
  &.expanded
    opacity 1
    
  &.collapsed
    opacity 0.5
  
  md-icon
    font-size 40px
    height 40px
    outline 0
    width 40px

.logo-avatar
  background-size 50px 50px
  background-position center
  border none
  border-radius 50%
  transition opacity 1s ease-in-out, border ease-in-out 500ms
  opacity 1.0
  
.logo-avatar:hover
  opacity 0.7
  
.unselectable
  user-select none 
  
.fadeable
  opacity 1.0
  
  &.ng-hide-add,
  &.ng-hide-remove
    transition all cubic-bezier(0.250, 0.460, 0.450, 0.940) 500ms
  
  &.ng-hide
    opacity 0.0

